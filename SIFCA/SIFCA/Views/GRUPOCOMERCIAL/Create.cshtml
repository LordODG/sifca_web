@model SIFCA.Models.GRUPOCOMERCIAL

@{
    ViewBag.Title = "Crear grupo comercial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Crear grupo comercial</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.GRUPOCOM, "Abreviatura grupo (Max 2 caracteres)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GRUPOCOM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GRUPOCOM, "", new { @class = "text-danger" })
            </div>
        </div>

       <div class="form-group">
            @Html.LabelFor(model => model.DESCRIPGRUPO,"Nombre grupo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DESCRIPGRUPO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DESCRIPGRUPO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear grupo comercial" class="btn btn-primary ">
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "GRUPOCOMERCIAL")" class="btn btn-primary"><i class="fa fa-arrow-left "></i> Regresar</a>
</div>
