@model IEnumerable<SIFCA.Models.GRUPOCOMERCIAL>

@{
    ViewBag.Title = "Gestionar grupo comercial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <a href="@Url.Action("Create", "GRUPOCOMERCIAL")" class="btn btn-primary"><i class="fa fa-plus "></i> Crear grupo comercial</a>
    <br />
    <br />
    <div class="panel panel-default">
        <div class="panel-heading">
            Listado de grupos comerciales
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables">
                    <thead>
                        <tr>
                            <th>
                                Abreviatura grupo comercial
                            </th>
                            <th>
                                Nombre grupo comercial
                            </th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeA">
                                <td>
                                    @Html.DisplayFor(modelItem => item.GRUPOCOM)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DESCRIPGRUPO)
                                </td>
                                <td><a href="@Url.Action("Edit", "GRUPOCOMERCIAL", new { id = item.GRUPOCOM })" ><i class="fa fa-edit "></i>Editar</a></td>
                                <td><a href="@Url.Action("Details", "GRUPOCOMERCIAL", new { id = item.GRUPOCOM })" ><i class="fa fa-search "></i>Ver detalles</a></td>
                                <td><a href="@Url.Action("Delete", "GRUPOCOMERCIAL", new { id = item.GRUPOCOM })" class="delete-link"><i class="fa fa-pencil"></i>Eliminar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
</div>
</div>
