@model SIFCA.Models.OBJETIVOINVENTARIO

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Detalles objetivo inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Detalles objetivo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.NOMBRETIPOINV)
        <div class="form-group">
            @Html.LabelFor(model => model.NOMBRETIPOINV, "Abreviatura objetivo (Max 2 caracteres)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOMBRETIPOINV, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.NOMBRETIPOINV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DESCRIPOBJETINV, "Descripcion objetivo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.DESCRIPOBJETINV, 5, 116, new { @class = "form-control", @readonly = true })
                @Html.ValidationMessageFor(model => model.DESCRIPOBJETINV, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}
<div>
    <hr />
    <a href="@Url.Action("Index", "OBJETIVOINVENTARIO")" class="btn btn-primary"><i class="fa fa-arrow-left "></i> Regresar</a>
    <a href="@Url.Action("Edit", "OBJETIVOINVENTARIO", new { id = Model.NOMBRETIPOINV })" class="btn btn-primary"><i class="fa fa-edit "></i> Editar objetivo</a>
</div>
