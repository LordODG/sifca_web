@model IEnumerable<SIFCA.Models.USUARIO>

@{
    ViewBag.Title = "Gestionar usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="@Url.Action("Create", "USUARIO")" class="btn btn-primary"><i class="fa fa-plus "></i> Crear usuario</a>
<br />
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        Listado de usuarios
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables">
                <thead>
                    <tr>
                        <th>
                            Nombres 
                        </th>
                        <th>
                            Apellidos
                        </th>
                        <th>
                            Documento
                        </th>
                        <th>
                            Tipo usuario
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="gradeA">
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMBRES)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.APELLIDOS)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CEDULA)
                            </td>
                            <td>
                                @( item.TIPOUSUARIO == "AD" ? "Administrador" : "Usuario normal")
                            </td>
                            <td><a href="@Url.Action("Edit", "USUARIO", new { id = item.NROUSUARIO })"><i class="fa fa-edit "></i>Editar</a></td>
                            <td><a href="@Url.Action("Details", "USUARIO", new { id = item.NROUSUARIO })"><i class="fa fa-search "></i>Ver detalles</a></td>
                            <td><a href="@Url.Action("Delete", "USUARIO", new { id = item.NROUSUARIO })" class="delete-link"><i class="fa fa-pencil"></i>Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
