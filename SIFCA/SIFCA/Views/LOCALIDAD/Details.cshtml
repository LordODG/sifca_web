@model SIFCA.Models.LOCALIDAD

@{
    ViewBag.Title = "Detalles localidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Detalles localidad</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CODLOCALIDAD)
        <div class="form-group">
            @Html.LabelFor(model => model.CODLOCALIDAD, "Codigo localidad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CODLOCALIDAD, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled"  } })
                @Html.ValidationMessageFor(model => model.CODLOCALIDAD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CODLOCALIDADPADRE, "Localidad relacionada", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CODLOCALIDADPADRE", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" }  )
                @Html.ValidationMessageFor(model => model.CODLOCALIDADPADRE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NOMBRE, "Nombre localidad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" , @disabled = "disabled" }  })
                @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
}

<div>
    <hr />
    <a href="@Url.Action("Index", "LOCALIDAD")" class="btn btn-primary"><i class="fa fa-arrow-left "></i> Regresar</a>
    <a href="@Url.Action("Edit", "LOCALIDAD", new { id = Model.CODLOCALIDAD })" class="btn btn-primary"><i class="fa fa-edit "></i> Editar localidad</a>
</div>
<p>

</p>
