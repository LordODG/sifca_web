@model IEnumerable<SIFCA.Models.LOCALIDAD>

@{
    ViewBag.Title = "Gestionar localidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <a href="@Url.Action("Create", "LOCALIDAD")" class="btn btn-primary"><i class="fa fa-plus "></i> Crear localidad</a>
    <br />
    <br />
    <div class="panel panel-default">
        <div class="panel-heading">
            Listado de localidades
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables">
                    <thead>
                        <tr>
                            <th>
                                Codigo localidad
                            </th>
                            <th>
                                Localidad relacionada
                            </th>
                            <th>
                                Nombre localidad
                            </th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeA">
                                <td>
                                    @Html.DisplayFor(modelItem => item.CODLOCALIDAD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LOCALIDAD2.NOMBRE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NOMBRE)
                                </td>
                                <td><a href="@Url.Action("Edit", "LOCALIDAD", new { id = item.CODLOCALIDAD })" ><i class="fa fa-edit "></i>Editar</a></td>
                                <td><a href="@Url.Action("Details", "LOCALIDAD", new { id = item.CODLOCALIDAD })" ><i class="fa fa-search "></i>Ver detalles</a></td>
                                <td><a href="@Url.Action("Delete", "LOCALIDAD", new { id = item.CODLOCALIDAD })" class="delete-link"><i class="fa fa-pencil"></i>Eliminar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
</div>
</div>
