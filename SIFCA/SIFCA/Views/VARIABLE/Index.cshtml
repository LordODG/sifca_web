@model IEnumerable<SIFCA.Models.VARIABLE>

@{
    ViewBag.Title = "Gestionar variable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="@Url.Action("Create", "VARIABLE")" class="btn btn-primary"><i class="fa fa-plus "></i> Crear variable inventario</a>
<br />
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        Listado variables
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables">
                <thead>
                    <tr>
                        <th>
                            Abreviatura variable
                        </th>
                        <th>
                            Nombre variable
                        </th>
                        <th>
                            Descripcion variable
                        </th>
                        <th>
                            Variable descriptiva ó numerica
                        </th>
                        <th>
                            Tipo dominio
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="gradeA">
                            <td>
                                @Html.DisplayFor(modelItem => item.ABREVIATURA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMBRE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DESCRIPCION)
                            </td>
                            <td>
                                 @(item.VARIABLEDESCRIPTIVA=="S"?"Si":"No")
                            </td>
                            <td>
                                @(item.TIPODOMINIO=="N"?"No aplica":(item.TIPODOMINIO=="U"?"Unico":"Mutliple"))
                            </td>
                            <td><a href="@Url.Action("Edit", "VARIABLE", new { id = item.NROVARIABLE })"><i class="fa fa-edit "></i>Editar</a></td>
                            <td><a href="@Url.Action("Details", "VARIABLE", new { id = item.NROVARIABLE })"><i class="fa fa-search "></i>Ver detalles</a></td>
                            <td><a href="@Url.Action("Delete", "VARIABLE", new { id = item.NROVARIABLE })" class="delete-link"><i class="fa fa-pencil"></i>Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

