@model SIFCA.Models.FORMULA

@{
    ViewBag.Title = "Detalles formula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Detalles formula</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.NROFORMULA)
        <div class="form-group">
            @Html.LabelFor(model => model.NROTIPOFORMULA, "Tipo formula", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NROTIPOFORMULA", null, htmlAttributes: new { @class = "chosen-select form-control", @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.NROTIPOFORMULA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EXPRESION, "Expresion matematica", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EXPRESION, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.EXPRESION, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NOMBRE, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control",@disabled="disabled" } })
                @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DESCRIPCION, "Descripcion", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.DESCRIPCION, 5, 116, new { @class = "form-control", @readonly = true })
                @Html.ValidationMessageFor(model => model.DESCRIPCION, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}

<div>
    <hr />
    <a href="@Url.Action("Index", "FORMULA")" class="btn btn-primary"><i class="fa fa-arrow-left "></i> Regresar</a>
    <a href="@Url.Action("Edit", "FORMULA", new { id = Model.NROFORMULA })" class="btn btn-primary"><i class="fa fa-edit "></i> Editar formula</a>
</div>
