@model IEnumerable<SIFCA.Models.ESPECIE>

@{
    ViewBag.Title = "Gestionar especies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a href="@Url.Action("Create", "ESPECIE")" class="btn btn-primary"><i class="fa fa-plus "></i> Crear especie</a>
<br />
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        Listado especies
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables">
                <thead>
                    <tr>
                        <th>
                            Nombre comun
                        </th>
                        <th>
                            Nombre cientifico
                        </th>
                        <th>
                            Familia
                        </th>
                        <th>
                            Zona geogafica
                        </th>
                        <th>
                            Zona vida
                        </th>
                        <th>
                            Diametro corte
                        </th>
                        <th>
                            Grupo geologico
                        </th>
                        <th>
                            Descripcion grupo
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="gradeA">
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMCOMUN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMCIENTIFICO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FAMILIA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ZONAGEOGRAFICA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ZONADEVIDA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DIAMMINCORTE)
                            </td>
                            <td>
                                @( item.GRUPOECOLOGICO == "NT" ? "No tolerante" : "Tolerante")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GRUPOCOMERCIAL.DESCRIPGRUPO)
                            </td>
                            <td><a href="@Url.Action("Edit", "ESPECIE", new { id = item.CODESP })" ><i class="fa fa-edit "></i>Editar</a></td>
                            <td><a href="@Url.Action("Details", "ESPECIE", new { id = item.CODESP })" ><i class="fa fa-search "></i>Ver detalles</a></td>
                            <td><a href="@Url.Action("Delete", "ESPECIE", new { id = item.CODESP })" class="delete-link"><i class="fa fa-pencil"></i>Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        </div>
    </div>
